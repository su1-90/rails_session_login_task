<!DOCTYPE html>
<html>
  <head>
  <title><%= yield(:title) || "CdpWebRailsSessionLoginTask" %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- <p id="notice"><%= notice %></p> -->

    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "alert alert-#{key}") %>
    <% end %>
    
    <% if logged_in? %>
      <%= link_to "タスク一覧", tasks_path(current_user), id: "tasks-index" %>
      <%= link_to "タスクを登録する", new_task_path, id: "new-task" %>
      <%= link_to "アカウント", user_path(current_user.id), id: "my-account" %>
      <%= link_to "ログアウト", session_path(current_user.id), method: :delete, id: "sign-out" %>
    <% else %>
      <%= link_to "アカウント登録", new_user_path, id: "sign-up" %>
      <%= link_to "ログイン", new_session_path, id: "sign-in" %>
    <% end %>
    <%= yield %>
  </body>
</html>
